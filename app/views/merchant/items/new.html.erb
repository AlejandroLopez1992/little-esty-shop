<%= form_with model: @item, url: merchant_items_path(@merchant), local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :description %>
  <%= form.text_field :description %>
  <%= form.label :unit_price %>
  <%= form.text_field :unit_price %>
  <%= form.submit "Submit" %>
<% end %>